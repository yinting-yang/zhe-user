<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zhe.user.persistence.TUserLogYzMapper" >
  <resultMap id="BaseResultMap" type="com.zhe.user.persistence.models.TUserLogYz" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="user_id" property="userId" jdbcType="INTEGER" />
    <result column="log_type" property="logType" jdbcType="INTEGER" />
    <result column="source_code" property="sourceCode" jdbcType="VARCHAR" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
  </resultMap>

  <sql id="Base_Column_List" >
    id, user_id, log_type, source_code, create_time
  </sql>

  <insert id="insert">
    insert into t_user_log_yz (user_id, log_type,
      source_code, create_time)
    values ( #{userId,jdbcType=INTEGER}, #{logType,jdbcType=INTEGER},
      #{sourceCode,jdbcType=VARCHAR}, #{createTime,jdbcType=TIMESTAMP})
  </insert>
  <select id="select" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List"/>from t_user_log_yz
    <include refid="paramWhere"/>
    ORDER BY create_time DESC limit #{start}, #{end}
  </select>

  <!-- 按照条件查询个数-->
  <select id="findTotal" resultType="int">
    SELECT COUNT(1) FROM t_user_log_yz
    <include refid="paramWhere"/>
  </select>
  <delete id="delete">
    DELETE FROM t_user_log_yz
    <include refid="paramWhere"/>
  </delete>
  <!--修改联系信息获取记录信息-->
  <update id="update">
    UPDATE t_user_log_yz
    <set>
      <if test="param != null">
        <if test="param.userId != null">AND user_id = #{param.userId},</if>
        <if test="param.logType != null">AND log_type = #{param.logType},</if>
        <if test="param.sourceCode != null">AND source_code = #{param.sourceCode},</if>
        <if test="param.createTime != null">AND create_time = #{param.createTime}</if>
      </if>
    </set>
    <where>
      <if test="param.id != null">and id = #{param.id}</if>
    </where>
  </update>

  <sql id="paramWhere">
    <where>
      <if test="param != null">
        <if test="param.id != null">AND id = #{param.id}</if>
        <if test="param.userId != null">AND user_id = #{param.userId}</if>
        <if test="param.logType != null">AND log_type = #{param.logType}</if>
        <if test="param.sourceCode != null">AND source_code = #{param.sourceCode}</if>
        <if test="param.createTime != null">AND create_time = #{param.createTime}</if>

      </if>
    </where>
  </sql>
</mapper>