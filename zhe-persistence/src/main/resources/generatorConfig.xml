<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <!--
    1.修改javaModelGenerator,sqlMapGenerator,javaClientGenerator节点的targetPackage属性以及table节点的tableName属性
    2.命令行进入对应的项目持久层模块目录下，比如lincomb-order-persistence目录下
    3.执行 mvn mybatis-generator:generate -f mybatis.xml
    -->
      <classPathEntry	location="D:\mysql\mysql-connector-java-5.1.29.jar" />
	<context id="MysqlTables" targetRuntime="MyBatis3">
		<commentGenerator>
			<property name="suppressAllComments" value="true" />	
		</commentGenerator>
          <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://127.0.0.1:3306/zhe_user"
                        userId="root"
                        password="123456">
        </jdbcConnection>
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

      <javaModelGenerator targetPackage="com.zhe.user.persistence.models" targetProject="./src/main/java">
            <property name="enableSubPackages" value="false"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>
        	
        <sqlMapGenerator targetPackage="mapper" targetProject="./src/main/resources">
            <property name="enableSubPackages" value="false"/>
        </sqlMapGenerator>
       
        <javaClientGenerator targetPackage="com.zhe.user.persistence" type="XMLMAPPER" targetProject="./src/main/java">
            <property name="enableSubPackages" value="false"/>
        </javaClientGenerator>




        <table schema="lbg_cooperation" tableName="t_auth_code_log_yz">
            <property name="useActualColumnNames" value="false"/>
            <property name="ignoreQualifiersAtRuntime" value="true"/>
        </table>
        <table schema="lbg_cooperation" tableName="t_sms_temp_yz">
            <property name="useActualColumnNames" value="false"/>
            <property name="ignoreQualifiersAtRuntime" value="true"/>
        </table>
        <table schema="lbg_cooperation" tableName="t_user_info_yz">
            <property name="useActualColumnNames" value="false"/>
            <property name="ignoreQualifiersAtRuntime" value="true"/>
        </table>
        <table schema="lbg_cooperation" tableName="t_user_log_yz">
            <property name="useActualColumnNames" value="false"/>
            <property name="ignoreQualifiersAtRuntime" value="true"/>
        </table>
        <table schema="lbg_cooperation" tableName="t_user_password_yz">
            <property name="useActualColumnNames" value="false"/>
            <property name="ignoreQualifiersAtRuntime" value="true"/>
        </table>


    </context>

</generatorConfiguration>